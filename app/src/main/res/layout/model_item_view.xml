<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >
    <!-- TODO: add view to display data in recycler view items -->
    <!-- TODO: add id's to views -->
    <ImageView
        android:id="@+id/item_logo_image_view"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            tools:text="Title"/>
        <TextView
            android:id="@+id/item_company_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="Company Name"/>
        <TextView
            android:id="@+id/item_location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/cities"/>

    </LinearLayout>
</LinearLayout>